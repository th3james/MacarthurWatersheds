<div class="results-number">
  {{addSubViewTo thisView 'ResultsNumberView' resultsNumber=resultsNumber}}
</div>

<div class="subjects">
  <h1>What would you like to explore?</h1>
  <ul>
    {{# each subjects}}
    <li data-subject="{{selector}}" class="{{#if active}}active{{/if}}">{{name}}</li>
    {{/each}}
  </ul>
</div>

{{#if showScenarioGroup}}
  {{#if showScenarioSelector}}
    {{addSubViewTo thisView 'ScenarioSelectorView' filter=filter}}
  {{/if}}
  </div>
{{else}}
  {{#if showScenarioSelector}}
    {{addSubViewTo thisView 'ScenarioSelectorView' filter=filter}}
  {{/if}}
{{/if}}

{{#if showLensSelector}}
  {{addSubViewTo thisView 'LensSelectorView' filter=filter}}
{{/if}}

{{#if showOtherSelectors}}
  {{addSubViewTo thisView 'LevelSelectorView' filter=filter}}
  {{addSubViewTo thisView 'ProtectionOptionView' filter=filter}}
  {{addSubViewTo thisView 'PressureOptionView' filter=filter}}
{{/if}}
